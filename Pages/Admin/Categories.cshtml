@page
@model NETForum.Pages.Admin.Categories

@{
    ViewData["Title"] = "Manage Categories";
}

<form method="get">
    <div class="d-flex gap-3 align-items-end">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input 
                type="text"
                class="form-control"
                asp-for="Name"
            />
        </div>
        <div class="form-group mt-2">
            <div class="form-check">
                <label asp-for="Published">Pinned</label>
                <input asp-for="Published" class="form-check-input" type="checkbox" />
                <span class="text-danger" asp-validation-for="Published"></span>
            </div>
        </div>
        <button class="btn btn-primary" style="height: fit-content" type="submit">Filter</button>
    </div>
</form>

<table class="table table-bordered table-striped mt-2">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Created At</th>
        <th>Published</th>
        <th>Sort Order</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model.CategoriesResult.Items)
    {
        <tr>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>@category.CreatedAt</td>
            <td>@category.Published</td>
            <td>@category.SortOrder</td>
        </tr>
    }
    </tbody>
</table>

<div class="d-flex mt-3">
    <p>Page @Model.CategoriesResult.PageNumber of @Model.CategoriesResult.TotalPages</p>
    
    <div class="d-flex justify-content-center mt-3">
        <a asp-page="/Admin/Categories"
           asp-route-PageNumber="@(Model.CategoriesResult.PageNumber - 1)"
           asp-route-published="@Request.Query["published"]"
           asp-route-name="@Request.Query["name"]"
           class="btn btn-outline-primary me-2 @(!Model.CategoriesResult.HasPreviousPage ? "disabled" : "")">Previous</a>

        <a asp-page="/Admin/Categories"
           asp-route-PageNumber="@(Model.CategoriesResult.PageNumber + 1)"
           asp-route-published="@Request.Query["published"]"
           asp-route-name="@Request.Query["name"]"
           class="btn btn-outline-primary ms-2 @(!Model.CategoriesResult.HasNextPage ? "disabled" : "")">Next</a>
    </div>
</div>