@page
@model NETForum.Pages.Category.CreateModel

@{
    ViewData["Title"] = "Create Category";
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<div class="row mt-2">
    <div class="col">
        <div class="p-4 border rounded-0">
            <h2>Create Category</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <form method="post">
                <div class="form-group mt-2">
                    <div class="form-check">
                        <label asp-for="CreateCategoryDto.Published">Published</label>
                        <input asp-for="CreateCategoryDto.Published" class="form-check-input" type="checkbox" />
                        <span class="text-danger" asp-validation-for="CreateCategoryDto.Published"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CreateCategoryDto.Name">Name</label>
                    <input asp-for="CreateCategoryDto.Name" class="form-control" />
                    <span asp-validation-for="CreateCategoryDto.Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreateCategoryDto.Description">Description</label>
                    <input asp-for="CreateCategoryDto.Description" class="form-control" />
                    <span asp-validation-for="CreateCategoryDto.Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreateCategoryDto.SortOrder">Sort Order</label>
                    <input asp-for="CreateCategoryDto.SortOrder" class="form-control" type="number" />
                    <span asp-validation-for="CreateCategoryDto.SortOrder"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Create</button>
            </form>
        </div>
    </div>
</div>