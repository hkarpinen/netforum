@page "/Posts/{id:int}/Edit"
@using NETForum.Pages.Shared.Components.TinyMceEditor
@model NETForum.Pages.Posts.EditModel

@{
    ViewData["Title"] = "Edit Post - " + Model.EditPostDto.Title;
    var mceEditorModel = new TinyMceEditorModel()
    {
        EditorId = "post-content"
    };
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @await Component.InvokeAsync("TinyMceEditor", mceEditorModel)
}

<div class="row mt-2">
    <div class="col">
        <div class="p-4 border rounded-0">
            <h2>Edit Post</h2>
            <hr />
            <form method="post">
                <div class="form-group">
                    <input type="hidden"
                           asp-for="EditPostDto.ForumId"
                           class="form-control" />
                </div>
                <div class="form-group">
                    <input type="hidden"
                           asp-for="EditPostDto.AuthorId"
                           class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="EditPostDto.Title">Title</label>
                    <input asp-for="EditPostDto.Title"
                           class="form-control"
                           type="text" />
                    <span class="text-danger" asp-validation-for="EditPostDto.Title"></span>
                </div>
                <div class="form-group mt-2">
                    <div class="form-check">
                        <label asp-for="EditPostDto.Published">Published</label>
                        <input asp-for="EditPostDto.Published" class="form-check-input" type="checkbox" />
                        <span class="text-danger" asp-validation-for="EditPostDto.Published"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="EditPostDto.Content">Content</label>
                    <textarea asp-for="EditPostDto.Content" class="form-control" id="post-content" rows="10"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Submit</button>
            </form>
        </div>
    </div>
</div>