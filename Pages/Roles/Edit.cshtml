@page "/roles/{id:int}/edit"
@model NETForum.Pages.Roles.EditModel

@{
    ViewData["Title"] = "Edit Role - " + Model.Form.Name;
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<div class="row mt-2">
    <div class="col">
        <div class="p-4 border rounded-0">
            <h2>Edit Role</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Form.Name">Name</label>
                    <input asp-for="Form.Name" class="form-control" />
                    <span class="text-danger" asp-validation-for="Form.Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Form.Description">Description</label>
                    <input asp-for="Form.Description" class="form-control" />
                    <span class="text-danger" asp-validation-for="Form.Description"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Update</button>
            </form>
        </div>
    </div>
</div>