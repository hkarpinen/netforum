@using NETForum.Constants
@using NETForum.Helpers
@using NETForum.Pages.Shared.Components.UserPhoto
@model ForumListViewModel

@if(Model.Forums.Any())
{
    <div class="card shadow">
        <div class="card-header shadow bg-primary text-white">
            @Model.Title
        </div>
        <div class="card-body">
            @foreach (var forumListItem in Model.Forums)
            {
                <div class="d-flex justify-content-between p-1">
                    <div class="d-flex gap-3 align-items-center">
                        <span class="text-secondary forum-icon">
                            <partial name="_ExternalSVG" model="@("forum_svg")" />
                        </span>
                        <a class="d-flex flex-column text-decoration-none" asp-page="@PageRoutes.ForumView" asp-route-id="@forumListItem.Id">
                            <p class="forum-title m-0 text-secondary">@forumListItem.Title</p>
                            <small class="m-0 text-black">@forumListItem.Description</small>
                        </a>
                    </div>
                    <div class="d-flex justify-content-between align-items-center gap-3">
                        <div class="d-flex flex-column align-items-center">
                            <p class="m-0 text-primary">Posts</p>
                            <p class="m-0 text-secondary">@forumListItem.TotalPosts.ToString()</p>
                        </div>
                        <div class="d-flex flex-column align-items-center">
                            <p class="m-0 text-primary">Replies</p>
                            <p class="m-0 text-secondary">@forumListItem.TotalReplies.ToString()</p>
                        </div>
                        @if (forumListItem.LastPostSummary != null)
                        {
                            <div class="d-flex align-items-center">
                                <span class="text-secondary account-icon me-3">
                                    @await Component.InvokeAsync("UserPhoto", new UserPhotoViewModel(){
                                        PhotoUrl = forumListItem.LastPostSummary.AuthorAvatarUrl,
                                        UserName = forumListItem.LastPostSummary.AuthorName
                                    })
                                </span>
                                <div class="d-flex flex-column">
                                    <a 
                                        asp-page="@PageRoutes.PostView" 
                                        asp-route-id="@forumListItem.LastPostSummary.Id"
                                        class="link-secondary text-decoration-none"
                                    >
                                        @forumListItem.LastPostSummary.Title
                                    </a>
                                    <small class="m-0">@DateHelpers.ToRelativeDatetimeString(forumListItem.LastPostSummary.CreatedAt)</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}