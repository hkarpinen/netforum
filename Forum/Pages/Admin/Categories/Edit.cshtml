@page "{id:int}"
@model EditModel

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@{
    ViewData["Title"] = "Edit Category";
}

<div class="row mt-2">
    <div class="col">
        <div class="p-4 border rounded-0">
            <h2>Edit Category</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <form method="post">
                <div class="form-group mt-2">
                    <div class="form-check">
                        <label asp-for="EditCategoryDto.Published">Published</label>
                        <input asp-for="EditCategoryDto.Published" class="form-check-input" type="checkbox" />
                        <span class="text-danger" asp-validation-for="EditCategoryDto.Published"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="EditCategoryDto.Name">Name</label>
                    <input asp-for="EditCategoryDto.Name" class="form-control" />
                    <span asp-validation-for="EditCategoryDto.Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EditCategoryDto.Description">Description</label>
                    <input asp-for="EditCategoryDto.Description" class="form-control" />
                    <span asp-validation-for="EditCategoryDto.Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EditCategoryDto.SortOrder">Sort Order</label>
                    <input asp-for="EditCategoryDto.SortOrder" class="form-control" type="number" />
                    <span asp-validation-for="EditCategoryDto.SortOrder"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Create</button>
            </form>
        </div>
    </div>
</div>