@page
@using NETForum.Constants
@model IndexModel

@{
    ViewData["Title"] = "Manage Roles";
}

<h2 class="mt-2">Manage Roles</h2>
<hr />
<a class="btn btn-primary" asp-page="@PageRoutes.CreateRole">Create Role</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Normalized Name</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Roles.Any())
        {
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>@role.Description</td>
                    <td>@role.NormalizedName</td>
                    <td><a asp-page="@PageRoutes.EditRole" asp-route-id="@role.Id">Edit</a></td>
                    <td><a asp-page="@PageRoutes.DeleteRole" asp-route-id="@role.Id">Delete</a></td>
                </tr>
            }
        }
    </tbody>
</table>